/delete-node/ &spe_partition;
/delete-node/ &nspe_partition;
/delete-node/ &storage_partition;

&rram0 {
	partitions {
		compatible = "atmosic,tz-fixed-partitions", "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			secure;
			reg = <0x00000 0xc000>;
		};
#ifdef DFU_IN_FLASH
		storage_partition: partition@c000 {
			label = "storage";
			reg = <0x0c000 0x4000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x10000 0x6f800>;
			partitions {
				#address-cells = <1>;
				#size-cells = <1>;
				spe_partition: partition@10000 {
					label = "spe_partition";
					secure;
					reg = <0x10000 0x5800>;
				};
				nspe_partition: partition@15800 {
					label = "nspe_partition";
					reg = <0x15800 0x6a000>;
				};
			};
		};
#else
		scratch_partition: partition@c000 {
			label = "image-scratch";
			reg = <0x0c000 0x2000>;
		};
		storage_partition: partition@e000 {
			label = "storage";
			reg = <0x0e000 0x2000>;
		};
		slot0_partition: partition@10000 {
			label = "image-0";
			reg = <0x10000 0x37c00>;
			partitions {
				#address-cells = <1>;
				#size-cells = <1>;
				spe_partition: partition@10000 {
					label = "spe_partition";
					secure;
					reg = <0x10000 0x5800>;
				};
				nspe_partition: partition@15800 {
					label = "nspe_partition";
					reg = <0x15800 0x32400>;
				};
			};
		};
		slot1_partition: partition@47c00 {
			label = "image-1";
			reg = <0x47c00 0x37c00>;
		};
#endif
	};
};

#ifdef DFU_IN_FLASH
&flash0 {
	partitions {
		compatible = "atmosic,tz-fixed-partitions", "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		slot1_partition: partition@0 {
			label = "image-1";
			reg = <0x00000 0x6f800>;
		};
		scratch_partition: partition@6f800 {
			label = "image-scratch";
			reg = <0x6f800 0x10800>;
		};
	};
};
#endif
